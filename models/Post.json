{
  "title": "Post",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "content": {
      "type": "string",
      "contentMediaType": "text/html",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 20
      }
    }
  },
  "required": ["title", "content", "date"]
}
